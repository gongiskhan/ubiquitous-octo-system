{
  "name": "branchrunner",
  "version": "1.0.0",
  "description": "Local service that receives GitHub push webhooks, runs builds, captures screenshots, and sends Slack notifications with autonomous testing and fixing agents",
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch server/index.ts",
    "dev:web": "cd web && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "build:server": "tsc -p tsconfig.json",
    "build:web": "cd web && npm run build",
    "build": "npm run build:server && npm run build:web",
    "start": "node dist/server/index.js",
    "postinstall": "cd web && npm install",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.0",
    "@octokit/rest": "^20.0.2",
    "@xenova/transformers": "^2.17.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "playwright": "^1.40.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
